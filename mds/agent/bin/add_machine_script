# Hook script for SAMBA "add machine script" option

import mmc.plugins.samba
import sys

if len(sys.argv) == 2:
    # Remove $ in machine name
    machine = sys.argv[1][:-1]
    mmc.plugins.samba.addMachine(machine, "", True)

sys.exit(0)
