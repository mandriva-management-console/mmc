# Hook script for SAMBA "delete share command" option

from mmc.plugins.samba import smbConf
import sys
import os

if len(sys.argv) != 3:
    sys.exit(1)

configFile = sys.argv[1]
shareName = sys.argv[2]

s = smbConf(configFile)
s.delShare(shareName, False)
s.save()

os.chmod(configFile, 0644)

sys.exit(0)
